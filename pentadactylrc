set runtimepath=$HOME/.pentadactyl

set titlestring=Mozilla\ Firefox
set complete=ls
set guioptions=BTbr
set editor=vim
" only follow hints when press enter
set followhints=1
set hintkeys=sadfjklewcmpgh
 " show link when hover links
set showstatuslinks=command
" open things at new tab
set newtab=all
" only show the tab bar when there are multiple tabs
"set showtabline=multitab

"Searching: use DuckDuckGo
"initialisation: bmark -title='DuckDuckGo' https://duckduckgo.com/?q=%s -keyword=ddg
set defsearch=ddg

colorscheme vimium

set mapleader=','

" Searching
" highlight the terms
set hlfind
" find as you type
set incfind
set findcase=ignore
map <Leader>/ :set hlf!<CR>

nmap a <Nop>
nmap b <Nop>
nmap d <Nop>
nmap u <Nop>
nmap w <Nop>

" move
nnoremap u 10k
nnoremap d 10j
nnoremap j 3j
nnoremap k 3k

nnoremap J :tabprevious<CR>
nnoremap K :tabnext<CR>
nnoremap x :quit<CR>
nnoremap X :undo<CR>
nnoremap b :bmarks <Space>

"" private mode
nnoremap <Leader>p :set private!<CR>

"" display download
nnoremap <Leader>d :downloads<CR>

map <Leader>l :ls<CR>
map <Leader>b :buffer #<CR>
